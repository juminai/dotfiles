(defwidget dock [] 
  (eventbox
    :class "dock"
    :onhover "eww update dock_rev=true"
    :onhoverlost "eww update dock_rev=false"
    (revealer
      :reveal {dock_rev || active.class == "null"}
      :transition "slideup"
      :duration duration
      (box 
        :class "widget" 
        :halign "center"
        :space-evenly false
        (eventbox
          :cursor "pointer"
          (button 
            :class "launcher-button" 
            :onclick "actions launcher" 
            "ïƒ‰"
          )
        )
        (box :width 5)
        (box
          :class "favorite"
          :spacing 5
          (for i in {dock.favorite}
            (application 
              :app i 
              :simple true
            )
          )
        )
        (box 
          :class "div" 
          :visible {arraylength(dock.impostor) > 0 && arraylength(dock.favorite) > 0}
        )
        (box
          :class "impostor"
          :spacing 5
          (for i in {dock.impostor}
            (application 
              :app i 
              :simple true
            )
          )
        )
      )
    )
  )
)